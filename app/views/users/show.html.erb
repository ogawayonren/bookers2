<%= render 'user', user: @user, new_book: @new_book %>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user_id) do %>
    <%= image_tag book.get_image %>
  <% end %>
<%= link_to book_path(book.id) do %>
<%= book.title %>
<% end %>
<%= book.body %>
</div>
<% end %>

