<h1>Book detail</h1>

<div>
  <%= link_to user_path(@book.user_id) do %>
    <%= image_tag @user.get_profile_image(100,100) %></p>
  <% end %>
  <%= link_to @book.user.name, user_path(@book.user_id) %>
  <%= link_to @book.title, book_path(@book.id) %></p>
  <p><%=@book .body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
