<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/b064cb6ea9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
      <div class = "container">
        <a class = "navbar-brand" href = >
          <span>Bookers</span>
        </a>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class = "navbar-collapse collapse" id = "navbarNavDropdown" style>
        <ul class = "navbar-nav ml-auto">
          <li>
          <a class = "nav-link text-light" href = ""></a>
        </ul>
      </div>

    <% if user_signed_in? %>

      <li>
        <%= link_to user_path(current_user.id) do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
        <%= link_to 'Home', user_path(current_user.id) %>    </li>

      <li>
        <%= link_to users_path do %>
          <i class="fa-solid fa-users"></i>
        <% end %>
        <%= link_to 'Users', users_path %>    </li>

      <li>
        <%= link_to books_path do %>
          <i class="fa-solid fa-book-open"></i>
        <% end %>
        <%= link_to "Books", books_path %>
      </li>
      <li>
        <%= link_to destroy_user_session_path do %>
          <i class="fa-solid fa-right-from-bracket"></i>
        <% end %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>

       <li>
        <%= link_to root_path do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
         <%= link_to "Home", root_path %>
       </li>
       <li>
        <%= link_to homes_about_path do %>
          <i class="fa-solid fa-link"></i>
        <% end %>
        <%= link_to "About", homes_about_path %>
      </li>
      <li>
         <%= link_to new_user_registration_path do %>
          <i class="fa-solid fa-user-plus"></i>
        <% end %>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa-solid fa-right-to-bracket"></i>
        <% end %>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
         </div>
    </nav>
  </header>

   <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>
  <footer>
    <div class="container mt-5">
  	  <div class="row">
    	  <div class="mx-auto">
    		  <p>CopyRight Infratop.inc</p>
    	  </div>
      </div>
    </div>
  </footer>
  </body>
</html>
